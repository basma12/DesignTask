<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/purple</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabSelectedTextColor">@color/purple</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>

    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="fontPath">fonts/DIN-NEXT_-ARABIC-REGULAR.otf</item>
    </style>


</resources>
